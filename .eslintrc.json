{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "classes": true,
      "defaultParams": true
    }
  },
  // 사용할 규칙 설정
  "rules": {
    "no-const-assign": 1,
    "no-extra-semi": 0,
    "semi": 0,
    "no-fallthrough": 0,
    "no-empty": 0,
    "no-mixed-spaces-and-tabs": 1,
    "no-redeclare": 0,
    "no-this-before-super": 1,
    "no-undef": 1,
    "no-unreachable": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 0,
    "constructor-super": 1,
    "curly": 0,
    "eqeqeq": 1,
    "func-names": 1,
    "valid-typeof": 1,
    "prettier/prettier": 1,
    // overrideing recommented rules
    "react/prop-types": 1,
    "no-console": 1
  },
  // 확장 설정
  "extends": [
    "eslint-config-prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  // 플러그인 추가
  "plugins": [
    "eslint-plugin-prettier",
    "react",
    "jsx-a11y",
    "import"
  ]
}